<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/body_background"
    android:orientation="vertical">
    <include layout="@layout/toolbar_layout" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/object_content"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="140dp"
                android:layout_height = "wrap_content"
                android:text = "抵押物区域"
                android:textSize = "14sp"></TextView>

            <Spinner
                android:id = "@+id/property_pca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></Spinner>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="140dp"
                android:layout_height = "wrap_content"
                android:text = "抵押物名称"
                android:textSize = "14sp"></TextView>

            <EditText
                android:id = "@+id/property_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="140dp"
                android:layout_height = "wrap_content"
                android:text = "坐落地址"
                android:textSize = "14sp"></TextView>

            <EditText
                android:id="@+id/property_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="140dp"
                android:layout_height = "wrap_content"
                android:text = "面积"
                android:textSize = "14sp"></TextView>

            <EditText
                android:id="@+id/property_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="140dp"
                android:layout_height = "wrap_content"
                android:text = "抵押物类型"
                android:textSize = "14sp"></TextView>

            <Spinner
                android:id="@+id/property_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></Spinner>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="140dp"
                android:layout_height = "wrap_content"
                android:text = "查勘联系人"
                android:textSize = "14sp"></TextView>

            <EditText
                android:id="@+id/inspection_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="140dp"
                android:layout_height = "wrap_content"
                android:text = "查勘人联系电话"
                android:textSize = "14sp"></TextView>

            <EditText
                android:id="@+id/inspection_contact_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="140dp"
                android:layout_height = "wrap_content"
                android:text = "产权人"
                android:textSize = "14sp"></TextView>

            <EditText
                android:id="@+id/property_owner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="140dp"
                android:layout_height = "wrap_content"
                android:text = "产权人电话"
                android:textSize = "14sp"></TextView>

            <EditText
                android:id="@+id/property_owner_telephone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="140dp"
                android:layout_height = "wrap_content"
                android:text = "身份证"
                android:textSize = "14sp"></TextView>

            <EditText
                android:id="@+id/property_owner_idcard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="140dp"
                android:layout_height = "wrap_content"
                android:text = "产权证号"
                android:textSize = "14sp"></TextView>

            <EditText
                android:id="@+id/property_owner_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/save_object"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height = "wrap_content"
                android:text = "  保 存  "
                android:textColor="@color/text_white"
                android:background="@color/primary"
                android:textSize = "14sp"></TextView>

            <TextView
                android:id = "@+id/delete_object"
                android:padding="10dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height = "wrap_content"
                android:text = "  删 除  "
                android:textColor="@color/text_white"
                android:background="@color/primary"
                android:textSize = "14sp"></TextView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
